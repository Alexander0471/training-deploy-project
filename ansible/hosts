# Define all machines and then group them
vagrant ansible_ssh_host=127.0.0.1 ansible_ssh_port=2222 ansible_user=vagrant ansible_ssh_private_key_file=./.vagrant_private_key ansible_ssh_extra_args='-o StrictHostKeyChecking=no'
vm-ansible-host ansible_host=127.0.0.1 ansible_port=22 ansible_user=user ansible_ssh_private_key_file=/home/user/.ssh/id_rsa ansible_ssh_extra_args='-o StrictHostKeyChecking=no'
vm-ansible-remote ansible_host=x.x.x.x ansible_port=22 ansible_user=user ansible_ssh_private_key_file=/home/user/.ssh/id_rsa ansible_ssh_extra_args='-o StrictHostKeyChecking=no'

[hostfacts]
vm-ansible-host
